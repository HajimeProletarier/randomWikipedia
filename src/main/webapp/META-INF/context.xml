<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- データベース接続の設定 -->
    <Resource name="jdbc/randomwikipedia"
          auth="Container"
          type="javax.sql.DataSource"
          maxTotal="30"
          maxIdle="10"
          maxWaitMillis="100"
          username="${DB_USERNAME}"
          password="${DB_PASSWORD}"
          driverClassName="com.mysql.cj.jdbc.Driver"
          url="${DB_URL}"/>
</Context>




